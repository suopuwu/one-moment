{
  "name": "One Moment",
  "description": "",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "img/16.png",
    "32": "img/32.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "action": {
    "default_popup": "settings.html",
    "default_icon": "img/128.png"
  },
  "options_page": "settings.html",
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
        "resources": ["AtkinsonHyperlegible.ttf"],
        "matches": [
            "http://*/*", 
            "https://*/*" 
        ]
    }
  ],
  "content_scripts": [
    {
        "js": ["js/cover.js"],
        "css": ["css/style.css"],
        "matches": [
            "http://*/*", 
            "https://*/*" 
        ]
    }
  ]
}